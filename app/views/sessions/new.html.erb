<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Connexion</h2>
      
      <%= form_with url: login_path, method: :post, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Mot de passe", class: "form-label" %>
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>

        <div class="d-grid">
          <%= f.submit "Se connecter", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <p>Pas encore de compte ? <%= link_to "S'inscrire", signup_path %></p>
      </div>
    </div>
  </div>
</div>
