<div class="container mt-4">
  <h1>Nouvelle Liste de Cadeaux</h1>

  <%= form_with model: @wishlist, local: true do |f| %>
    <% if @wishlist.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@wishlist.errors.count, "erreur") %> :</h4>
        <ul>
          <% @wishlist.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :title, "Titre de la liste", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Ex: Ma liste de Noël 2025", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :year, "Année", class: "form-label" %>
      <%= f.number_field :year, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Description (optionnelle)", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Ajoutez une description..." %>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :is_public, class: "form-check-input" %>
      <%= f.label :is_public, "Rendre cette liste publique (visible par ma famille)", class: "form-check-label" %>
    </div>

    <div class="d-flex gap-2">
      <%= f.submit "Créer la liste", class: "btn btn-primary" %>
      <%= link_to "Annuler", wishlists_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
